<% include ../partials/header.ejs %>

<div class='container'>
	<div class='row'>
		
	
		<h1 style='text-align:center;'>
			Create a New CampGround
		</h1>
		<div style='width:30%;margin:25px auto'>
			
			<form action='/campgrounds' method="POST">
				<div class='form-group'>
					<input class='form form-control' type="text" name='campName' placeholder='CampGround Name'>
				</div>
				<div class='form-group'>
					<input class='form form-control' type="number" name='price' placeholder='Price' min='0.01' step='0.01'>
				</div>
				<div class='form-group'>
					<input class='form form-control' type='text' name='image' placeholder='Image URL'>
				</div>
				<div class='form-group'>
					<input class='form form-control' type='text' name='description' placeholder='Description'>
				</div>
				<div class='form-group'>
					<input class="btn btn-lg btn-primary btn-block" type='submit'>
				</div>
			</form>
			<a href='/campgrounds'>View CampGrounds</a>	
			</div>
	
	</div>

	
	
</div>
<% include ../partials/footer.ejs %>